@model IEnumerable<FE.Models.RegistroFactura>

@{
    ViewData["Title"] = "Registros";
}

<h1>Registros</h1>

<p>
    <a asp-action="Create">Agregar Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodigoRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdClienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleadoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoRegistro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdClienteNavigation.CorreoEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.ApellidoEmpleado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdRegistro">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdRegistro">Detalle</a> |
                <a asp-action="Delete" asp-route-id="@item.IdRegistro">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
